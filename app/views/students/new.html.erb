<% if @student.errors.any? %>
    <%= pluralize(@student.errors.count, "error") %>
    prohibited your profile from being created
 <ul>
    <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
 </ul>
 <% end %>

<div class="container">
    <div class="row center sign-up-form">
        <div class="col s12 m12 l12">
            <div class="card-panel">
                <h3 class="header">Sign up!</h3>
                <div class="row">
                    <%= form_for(@student, html: {class: "col s12"}) do |f| %>
                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.label :name, placeholder: "Enter your full name", autofocus: true %>
                                <%= f.text_field :name %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.label :email, placeholder: "Enter your email address" %>
                                <%= f.text_field :email %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <%= f.submit "SIGN UP", class: "btn orange waves-effect waves-light right"  %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>    
    </div>
</div>